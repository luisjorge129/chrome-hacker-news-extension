{
  "manifest_version": 2,
  "name": "Hacker News",
  "version": "1.5",

  "description": "This extension let you read the top news from Y Combinator Hacker News.",
  "icons": { "48": "assets/img/icon48.png",
 	           "128": "assets/img/icon128.png" },

  "background": {
    "page": "popup.html",
    "persistent": true
  },
  "permissions": [
    "https://hacker-news.firebaseio.com/v0/"
  ],
  "browser_action": {
    "default_icon": "assets/img/icon48.png",
    "default_popup": "popup.html"
  }
}
